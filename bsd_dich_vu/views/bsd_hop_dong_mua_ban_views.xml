<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_hd_ban_form">
        <field name="name">bsd.hd_ban.form</field>
        <field name="model">bsd.hd_ban</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Xác nhận"
                            name="action_xac_nhan"
                            states="nhap"
                            confirm="Bạn có muốn xác nhận hợp đồng không?"
                            attrs="{'invisible': ['|',('id', '=',False)]}"
                            type="object"
                            class="oe_highlight"/>
                    <button string="In hợp đồng"
                            name="action_in_hd"
                            type="object"
                            states="xac_nhan"
                            class="oe_highlight"/>
                    <button string="Upload hợp đồng"
                            name="action_upload_hdb"
                            states="xac_nhan"
                            attrs="{'invisible':['|',('bsd_ngay_in_hdb', '=',False)]}"
                            type="object"
                            class="oe_highlight"/>
                    <button string="Ký hợp đồng"
                            name="action_ky_hdb"
                            states="xac_nhan"
                            attrs="{'invisible':['|',('bsd_ngay_in_hdb', '=',False)]}"
                            type="object"
                            class="oe_highlight"/>
                    <button string="Chiết khấu mua sỉ"
                        name="action_ck_ms"
                        type="object"
                        states="da_ky"
                        class="oe_highlight"/>
                    <button string="Hủy"
                            name="action_huy"
                            type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="0"/>
                </header>
                <sheet>
                    <notebook>
                        <page string="Thông tin chung">
                            <group>
                                <group>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="bsd_ma_hd_ban"/>
                                    <field name="bsd_ngay_hd_ban"/>
                                    <field name="bsd_khach_hang_id"
                                           context="{'form_view_ref': 'bsd_kinh_doanh.bsd_res_partner_cn_form'}"
                                           options="{'no_create':true}"/>
                                    <field name="bsd_dat_coc_id"
                                           options="{'no_create':true}"
                                           domain="[('bsd_khach_hang_id', 'in', [bsd_khach_hang_id])]"/>
                                </group>
                                <group>
                                    <field name="bsd_bao_gia_id"/>
                                    <field name="bsd_du_an_id"/>
                                    <field name="bsd_dot_mb_id"/>
                                    <field name="bsd_bang_gia_id"/>
                                </group>
                            </group>
                            <group string="SẢN PHẨM">
                                <group>
                                    <field name="bsd_unit_id"
                                           context="{'form_view_ref': 'bsd_du_an.bsd_product_template_form'}"
                                           options="{'no_create':true}"/>
                                    <label for="bsd_dt_xd"/>
                                    <div class="o_row no-gutters d-flex">
                                        <div class="col">
                                            <field name="bsd_dt_xd" class="mr-1"/>
                                            <span>m2</span>
                                        </div>
                                    </div>
                                    <label for="bsd_dt_sd"/>
                                    <div class="o_row no-gutters d-flex">
                                        <div class="col">
                                            <field name="bsd_dt_xd" class="mr-1"/>
                                            <span>m2</span>
                                        </div>
                                    </div>
                                    <field name="bsd_qsdd_m2"/>
                                    <field name="bsd_thue_id" options="{'no_create':true}"/>
                                    <label for="bsd_thue_suat"/>
                                    <div class="o_row no-gutters d-flex">
                                        <div class="col">
                                            <field name="bsd_thue_suat" class="mr-1"/>
                                            <span>%</span>
                                        </div>
                                    </div>
                                    <label for="bsd_tl_pbt"/>
                                    <div class="o_row no-gutters d-flex">
                                        <div class="col">
                                            <field name="bsd_tl_pbt" class="mr-1"/>
                                            <span>%</span>
                                        </div>
                                    </div>
                                    <field name="bsd_cs_tt_id" options="{'no_create':true}"/>
                                </group>
                                <group>
                                    <field name="bsd_gia_ban"/>
                                    <field name="bsd_tien_ck"/>
                                    <field name="bsd_tien_bg"/>
                                    <field name="bsd_gia_truoc_thue"/>
                                    <field name="bsd_tien_qsdd"/>
                                    <field name="bsd_tien_thue"/>
                                    <field name="bsd_tien_pbt"/>
                                    <field name="bsd_tong_gia"/>
                                </group>
                            </group>
                            <group string="PHÍ QUẢN LÝ">
                                <group>
                                    <field name="bsd_thang_pql"/>
                                </group>
                                <group>
                                    <field name="bsd_tien_pql"/>
                                </group>
                            </group>
                            <group string="XÁC NHẬN">
                                <group>
                                    <field name="bsd_ngay_in_hdb"/>
                                    <field name="bsd_ngay_hh_khdb"/>
                                </group>
                                <group>
                                    <field name="bsd_ngay_up_hdb"/>
                                    <field name="bsd_ngay_ky_hdb"/>
                                </group>
                            </group>
                            <group string="ĐỒNG SỞ HỮU">
                                <field name="bsd_dong_sh_ids" nolabel="1">
                                    <tree editable="top" default_order="bsd_lan_td desc">
                                        <field name="bsd_dong_sh_id"
                                               context="{'form_view_ref': 'bsd_kinh_doanh.bsd_res_partner_cn_form'}"/>
                                        <field name="bsd_mobile"/>
                                        <field name="bsd_email"/>
                                        <field name="bsd_pl_dsh_id"/>
                                        <field name="bsd_lan_td"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Bàn giao">
                            <field name="bsd_bg_ids">
                                <tree editable="bottom">
                                    <field name="bsd_dk_bg_id"
                                           options="{'no_create':true}"
                                           domain="[('bsd_du_an_id', '=',parent.bsd_du_an_id),
                                                    '|',('bsd_dot_mb_id','=',parent.bsd_dot_mb_id),
                                                        ('bsd_dot_mb_id', '=',False)]"/>
                                    <field name="bsd_ten_dkbg"/>
                                    <field name="bsd_dk_tt"/>
                                    <field name="bsd_gia_m2"/>
                                    <field name="bsd_tien"/>
                                    <field name="bsd_ty_le"/>
                                    <field name="bsd_tien_bg" sum="Tổng tiền bàn giao"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Chiết khấu">
                            <field name="bsd_ps_ck_ids">
                                <tree editable="bottom">
                                    <field name="bsd_loai_ck"/>
                                    <field name="bsd_bao_gia_id" invisible="1"/>
                                    <field name="bsd_ck_ch_id" invisible="1"/>
                                    <field name="bsd_ck_cstt_id" invisible="1"/>
                                    <field name="bsd_ck_nb_id" invisible="1"/>
                                    <field name="bsd_cs_tt_id" invisible="1"/>
                                    <field name="bsd_chiet_khau_id" options="{'no_create':true}"/>
                                    <field name="bsd_ten_ck"/>
                                    <field name="bsd_tu_ngay"/>
                                    <field name="bsd_den_ngay"/>
                                    <field name="bsd_cach_tinh"/>
                                    <field name="bsd_tien"/>
                                    <field name="bsd_tl_ck"/>
                                    <field name="bsd_tien_ck" sum="Tổng tiền chiết khấu"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Lịch thanh toán">
                            <field name="bsd_ltt_ids" nolabel="1">
                                <tree>
                                    <field name="bsd_stt"/>
                                    <field name="bsd_ten_dtt"/>
                                    <field name="bsd_ngay_hh_tt"/>
                                    <field name="bsd_tien_dot_tt" sum="Tổng tiền thanh toán"/>
                                    <field name="bsd_tinh_pql"/>
                                    <field name="bsd_tinh_pbt"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Khuyến mãi">
                            <field name="bsd_km_ids" nolabel="1" context="{'default_bsd_dot_mb_id':bsd_dot_mb_id}">
                                <tree editable="bottom">
                                    <field name="bsd_khuyen_mai_id"
                                           domain="[('bsd_dot_mb_id', '=', bsd_dot_mb_id),('state','=','duyet'),('bsd_loai','=',False)]"
                                           options="{'no_create':true}"/>
                                    <field name="bsd_ma_km"/>
                                    <field name="bsd_tu_ngay"/>
                                    <field name="bsd_den_ngay"/>
                                    <field name="bsd_ngay_hldc"/>
                                    <field name="bsd_bao_gia_id" invisible="1"/>
                                    <field name="bsd_dot_mb_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Chiết khấu đặc biệt">
                            <field name="id" invisible="1"/>
                            <field name="bsd_ck_db_ids" context="{'default_bsd_bao_gia_id':id}">
                                <tree>
                                    <field name="bsd_ma_ck_db"/>
                                    <field name="bsd_ten_ck_db"/>
                                    <field name="bsd_cach_tinh"/>
                                    <field name="bsd_tien"/>
                                    <field name="bsd_tl_ck"/>
                                    <field name="bsd_tien_ck"/>
                                    <field name="state"/>
                                    <button icon="fa-pencil"
                                            name="action_xac_nhan"
                                            confirm="Bạn có muốn Xác nhận yêu cầu không?"
                                            attrs="{'invisible': ['|',('id', '=',False),('state','not in',['nhap'])]}"
                                            type="object"/>
                                    <button icon="fa-check-square-o"
                                            name="action_duyet"
                                            states="xac_nhan"
                                            confirm="Bạn có muốn Duyệt yêu cầu không?"
                                            type="object"/>
                                    <button icon="fa-times-circle-o"
                                            name="action_khong_duyet"
                                            states="xac_nhan"
                                            type="object"
                                            confirm="Bạn có muốn Từ chối yêu cầu không?"/>
                                </tree>
                                <form>
                                    <header>
                                        <field name="state" widget="statusbar" statusbar_visible="0"/>
                                    </header>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="currency_id" invisible="1"/>
                                                <field name="company_id" invisible="1"/>
                                                <field name="bsd_ma_ck_db"/>
                                                <field name="bsd_ten_ck_db"/>
                                                <field name="bsd_cach_tinh"/>
                                                <field name="bsd_tien"
                                                       attrs="{'required':[('bsd_cach_tinh', 'in', ['tien'])],
                                                               'readonly':['|',('bsd_cach_tinh', 'in', ['phan_tram']),('state','!=','nhap')]}"/>
                                                <field name="bsd_tl_ck"
                                                       attrs="{'required':[('bsd_cach_tinh', 'in', ['phan_tram'])],
                                                               'readonly':['|',('bsd_cach_tinh', 'in', ['tien']),('state','!=','nhap')]}"/>
                                                <field name="bsd_dien_giai"/>
                                                <field name="bsd_bao_gia_id"/>
                                                <field name="bsd_khach_hang_id"/>
                                            </group>
                                            <group>
                                                <field name="bsd_du_an_id"/>
                                                <field name="bsd_unit_id"/>
                                                <field name="bsd_dot_mb_id"/>
                                                <field name="bsd_cs_tt_id"/>
                                                <field name="bsd_tien_dc"/>
                                                <field name="bsd_tien_gc"/>
                                                <field name="bsd_ngay_duyet"/>
                                                <field name="bsd_nguoi_duyet_id"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_hd_ban_tree">
        <field name="name">bsd.hd_ban.tree</field>
        <field name="model">bsd.hd_ban</field>
        <field name="arch" type="xml">
            <tree>
                <field name="bsd_ma_hd_ban"/>
                <field name="bsd_du_an_id"/>
                <field name="bsd_unit_id"/>
                <field name="bsd_khach_hang_id"/>
                <field name="bsd_tong_gia"/>
                <field name="state"/>
                <field name="company_id" invisible="1"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="bsd_hd_ban_filter">
        <field name="name">bsd.hd_ban.list.filter</field>
        <field name="model">bsd.hd_ban</field>
        <field name="arch" type="xml">
            <search string="Lọc dữ liệu">
                <field name="bsd_ma_hd_ban"/>
                <field name="bsd_khach_hang_id"/>
                <field name="bsd_unit_id"/>
                <field name="bsd_du_an_id"/>
                <filter string="HĐ của tôi" domain="[('create_uid', '=', uid)]" name="my_hd_ban_filter"/>
                <group expand="0" string="Group by">
                    <filter string="Dự án" name="bsd_du_an_id" domain="[]" context="{'group_by': 'bsd_du_an_id'}"/>
                    <filter string="Khách hàng" name="bsd_khach_hang_id" domain="[]" context="{'group_by': 'bsd_khach_hang_id'}"/>
                    <filter string="Căn hộ" name="bsd_unit_id" domain="[]" context="{'group_by': 'bsd_unit_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="bsd_hd_ban_action">
        <field name="name">Hợp đồng mua bán</field>
        <field name="res_model">bsd.hd_ban</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="xml">
            <p>Tạo hợp đồng mua bán</p>
        </field>
    </record>
</odoo>