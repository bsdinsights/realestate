<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_wizard_ck_nb_form">
        <field name="name">bsd.wizard.ck_nb.form</field>
        <field name="model">bsd.wizard.ck_nb</field>
        <field name="arch" type="xml">
            <form string="Ghi lý do từ chối">
                <sheet>
                    <group>
                        <group>
                            <field name="bsd_ck_nb_id"/>
                        </group>
                        <group>
                            <field name="bsd_ly_do"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_xac_nhan" type="object"
                            string="Xác nhận" class="oe_highlight"/>
                    <button special="cancel" string="Hủy bỏ"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="bsd_wizard_ck_nb_action">
        <field name="name">Ghi nhận lý do</field>
        <field name="res_model">bsd.wizard.ck_nb</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>
</odoo>