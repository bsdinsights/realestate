<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_bao_gia_form">
        <field name="name">bsd.bao_gia.form</field>
        <field name="model">bsd.bao_gia</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Xác nhận"
                            name="action_xac_nhan"
                            states="nhap"
                            attrs="{'invisible': ['|',('id', '=',False)]}"
                            type="object"
                            class="oe_highlight"/>
                    <button string="Duyệt"
                            name="action_duyet"
                            states="cho_duyet"
                            type="object"
                            class="oe_highlight"/>
                    <button string="In bảng giá"
                            name="action_in_bg"
                            states="da_duyet"
                            type="object"
                            class="oe_highlight"/>
                    <button string="Ký bảng giá"
                            name="action_ky_bg"
                            states="da_duyet"
                            attrs="{'invisible':['|',('bsd_ngay_in_bg', '=',False)]}"
                            type="object"
                            class="oe_highlight"/>
                    <button string="Lịch thanh toán"
                            name="action_lich_tt"
                            states="nhap"
                            attrs="{'invisible': ['|',('id', '=',False)]}"
                            type="object"
                            class="oe_highlight"/>
                    <button string="Hủy"
                            states="cho_duyet,da_duyet,dat_coc"
                            confirm="Bạn có chắc muốn Hủy báo giá không?"
                            name="action_huy"
                            type="object"/>

                    <field name="state" widget="statusbar" statusbar_visible="0"/>
                </header>
                <sheet>
                    <notebook>
                        <page string="Thông tin chung">
                            <group>
                                <group>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="bsd_ma_bao_gia"/>
                                    <field name="bsd_ten_bao_gia"/>
                                    <field name="bsd_ngay_bao_gia"/>
                                    <field name="bsd_khach_hang_id"
                                           context="{'form_view_ref': 'bsd_kinh_doanh.bsd_res_partner_cn_form'}"
                                           options="{'no_create':true}"/>
                                    <field name="bsd_giu_cho_id"
                                           options="{'no_create':true}"
                                           domain="[('bsd_kh_moi_id', 'in', [bsd_khach_hang_id]),
                                                    ('state', '=','giu_cho')]"/>
                                </group>
                                <group>
                                    <field name="bsd_du_an_id"/>
                                    <field name="bsd_dot_mb_id"/>
                                    <field name="bsd_bang_gia_id"/>
                                    <field name="bsd_tien_gc"/>
                                    <field name="bsd_tien_dc"/>
                                    <field name="bsd_pt_tt_id" options="{'no_create':true}"/>
                                </group>
                            </group>
                            <group string="MÔI GIỚI">
                                <group>
                                    <field name="bsd_nvbh_id" options="{'no_create':true}"/>
                                    <field name="bsd_san_gd_id" options="{'no_create':true}"/>
                                </group>
                                <group>
                                    <field name="bsd_ctv_id" options="{'no_create':true}"/>
                                    <field name="bsd_gioi_thieu_id" options="{'no_create':true}"/>
                                </group>
                            </group>
                            <group string="SẢN PHẨM">
                                <group>
                                    <field name="bsd_unit_id"
                                           context="{'form_view_ref': 'bsd_du_an.bsd_product_template_form'}"
                                           options="{'no_create':true}"/>
                                    <label for="bsd_dt_xd"/>
                                    <div class="o_row no-gutters d-flex">
                                        <div class="col">
                                            <field name="bsd_dt_xd" class="mr-1"/>
                                            <span>m2</span>
                                        </div>
                                    </div>
                                    <label for="bsd_dt_sd"/>
                                    <div class="o_row no-gutters d-flex">
                                        <div class="col">
                                            <field name="bsd_dt_xd" class="mr-1"/>
                                            <span>m2</span>
                                        </div>
                                    </div>
                                    <field name="bsd_qsdd_m2"/>
                                    <field name="bsd_thue_id" options="{'no_create':true}"/>
                                    <label for="bsd_thue_suat"/>
                                    <div class="o_row no-gutters d-flex">
                                        <div class="col">
                                            <field name="bsd_thue_suat" class="mr-1"/>
                                            <span>%</span>
                                        </div>
                                    </div>
                                    <label for="bsd_tl_pbt"/>
                                    <div class="o_row no-gutters d-flex">
                                        <div class="col">
                                            <field name="bsd_tl_pbt" class="mr-1"/>
                                            <span>%</span>
                                        </div>
                                    </div>
                                    <field name="bsd_cs_tt_id" options="{'no_create':true}"/>
                                </group>
                                <group>
                                    <field name="bsd_gia_ban"/>
                                    <field name="bsd_tien_ck"/>
                                    <field name="bsd_tien_bg"/>
                                    <field name="bsd_gia_truoc_thue"/>
                                    <field name="bsd_tien_qsdd"/>
                                    <field name="bsd_tien_thue"/>
                                    <field name="bsd_tien_pbt"/>
                                    <field name="bsd_tong_gia"/>
                                </group>
                            </group>
                            <group string="PHÍ QUẢN LÝ">
                                <group>
                                    <field name="bsd_thang_pql"/>
                                </group>
                                <group>
                                    <field name="bsd_tien_pql"/>
                                </group>
                            </group>
                            <group string="HIỆU LỰC">
                                <group>
                                    <field name="bsd_ngay_in_bg"/>
                                    <field name="bsd_ngay_hh_kbg"/>
                                </group>
                                <group>
                                    <field name="bsd_ngay_hl_bg"/>
                                    <field name="bsd_ngay_ky_bg"/>
                                </group>
                            </group>
                        </page>
                        <page string="Bàn giao">
                            <field name="bsd_bg_ids">
                                <tree editable="bottom">
                                    <field name="bsd_dk_bg_id"
                                           options="{'no_create':true}"
                                           domain="[('bsd_du_an_id', '=',parent.bsd_du_an_id),
                                                    '|',('bsd_dot_mb_id','=',parent.bsd_dot_mb_id),
                                                        ('bsd_dot_mb_id', '=',False)]"/>
                                    <field name="bsd_ten_dkbg"/>
                                    <field name="bsd_dk_tt"/>
                                    <field name="bsd_gia_m2"/>
                                    <field name="bsd_tien"/>
                                    <field name="bsd_ty_le"/>
                                    <field name="bsd_tien_bg" sum="Tổng tiền bàn giao"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Chiết khấu">
                            <field name="bsd_ps_ck_ch_ids">
                                <tree editable="bottom">
                                    <field name="bsd_bao_gia_id" invisible="1"/>
                                    <field name="bsd_ck_ch_id" invisible="1"/>
                                    <field name="bsd_chiet_khau_id"/>
                                    <field name="bsd_ten_ck"/>
                                    <field name="bsd_tu_ngay"/>
                                    <field name="bsd_den_ngay"/>
                                    <field name="bsd_cach_tinh"/>
                                    <field name="bsd_tien"/>
                                    <field name="bsd_tl_ck"/>
                                    <field name="bsd_tien_ck" sum="Tổng tiền chiết khấu"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Lịch thanh toán">
                            <field name="bsd_ltt_ids">
                                <tree>
                                    <field name="bsd_stt"/>
                                    <field name="bsd_ten_dtt"/>
                                    <field name="bsd_ngay_hh_tt"/>
                                    <field name="bsd_tien_dot_tt" sum="Tổng tiền thanh toán"/>
                                    <field name="bsd_tinh_pql"/>
                                    <field name="bsd_tinh_pbt"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Đồng sở hữu">
                            <field name="bsd_dsh_ids">
                                <tree editable="bottom">
                                    <field name="bsd_ma_kh"/>
                                    <field name="name" string="Đồng sở hữu"/>
                                    <field name="mobile"/>
                                    <field name="email" string="Email"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_bao_gia_tree">
        <field name="name">bsd.bao_gia.tree</field>
        <field name="model">bsd.bao_gia</field>
        <field name="arch" type="xml">
            <tree>
                <field name="bsd_ma_bao_gia"/>
                <field name="bsd_ngay_bao_gia"/>
                <field name="bsd_khach_hang_id"/>
                <field name="bsd_giu_cho_id"/>
                <field name="bsd_du_an_id"/>
                <field name="bsd_unit_id"/>
                <field name="bsd_cs_tt_id"/>
                <field name="bsd_tong_gia"/>
                <field name="bsd_ngay_hh_kbg"/>
                <field name="state"/>
                <field name="currency_id" invisible="1"/>
                <field name="company_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="bsd_bao_gia_filter">
        <field name="name">bsd.bao_gia.list.filter</field>
        <field name="model">bsd.bao_gia</field>
        <field name="arch" type="xml">
            <search string="Lọc dữ liệu">
                <field name="bsd_ma_bao_gia"/>
                <field name="bsd_khach_hang_id"/>
                <field name="bsd_du_an_id"/>
                <field name="bsd_unit_id"/>

                <filter string="Phiếu của tôi" domain="[('create_uid', '=', uid)]" name="my_rap_can_filter"/>

                <group expand="0" string="Group by">
                    <filter string="Dự án" name="bsd_du_an_id" domain="[]" context="{'group_by': 'bsd_du_an_id'}"/>
                    <filter string="Khách hàng" name="bsd_khach_hang_id" domain="[]" context="{'group_by': 'bsd_khach_hang_id'}"/>
                    <filter string="Căn hộ" name="bsd_unit_id" domain="[]" context="{'group_by': 'bsd_unit_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="bsd_bao_gia_action">
        <field name="name">Bảng tính giá</field>
        <field name="res_model">bsd.bao_gia</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="xml">
            <p>Tạo bảng tính giá</p>
        </field>
    </record>

    <record model="ir.ui.view" id="bsd_lich_thanh_toan_form">
        <field name="name">bsd.lich_thanh_toan.form</field>
        <field name="model">bsd.lich_thanh_toan</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="bsd_stt"/>
                            <field name="bsd_ma_dtt"/>
                            <field name="bsd_ten_dtt"/>
                            <field name="bsd_gd_tt"/>
                            <field name="bsd_ngay_hh_tt"/>
                            <field name="bsd_tien_dot_tt"/>
                            <field name="bsd_tien_dc"/>
                            <field name="bsd_thanh_toan"/>
                            <field name="bsd_ngay_tt"/>
                            <field name="bsd_tinh_pql"/>
                            <field name="bsd_tinh_pbt"/>
                        </group>
                        <group>
                            <field name="currency_id"/>
                            <field name="company_id" invisible="1"/>
                            <field name="bsd_ngay_ah"/>
                            <field name="bsd_tinh_phat"/>
                            <field name="bsd_lai_phat"/>
                            <field name="bsd_tien_td"/>
                            <field name="bsd_tl_td"/>
                            <field name="bsd_phat_thd"/>
                            <field name="bsd_phat_shd"/>
                        </group>
                    </group>
                    <group string="THAM CHIẾU">
                        <group>
                            <field name="bsd_cs_tt_id"/>
                            <field name="bsd_cs_tt_ct_id"/>
                        </group>
                        <group>
                            <field name="bsd_bao_gia_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>