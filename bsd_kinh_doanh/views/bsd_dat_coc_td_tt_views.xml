                                        <field name="bsd_ten_ck_db"/>
                                        <field name="bsd_cach_tinh"/>
                                        <field name="bsd_tien"/>
                                        <field name="bsd_tl_ck"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </group>
                            <group string="MỚI">
                                <field name="bsd_ck_db_moi_ids"
