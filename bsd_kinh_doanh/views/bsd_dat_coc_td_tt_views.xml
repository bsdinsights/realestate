                                        <field name="bsd_bao_gia_id" invisible="1"/>
                                        <field name="bsd_ck_ch_id" invisible="1"/>
                                        <field name="bsd_ck_cstt_id" invisible="1"/>
                                        <field name="bsd_ck_nb_id" invisible="1"/>
                                        <field name="bsd_cs_tt_id" invisible="1"/>
