<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_dt_tt_form">
        <field name="name">bsd.dt_tt.form</field>
        <field name="model">bsd.dt_tt</field>
        <field name="arch" type="xml">
            <form duplicate="false">
                <header>
                    <button string="Xác nhận"
                            name="action_xac_nhan"
                            states="nhap"
                            confirm="Bạn có chắc chắn Xác nhận không?"
                            attrs="{'invisible': ['|',('id', '=',False)]}"
                            type="object"
                            class="oe_highlight"/>
                    <button string="Duyệt"
                            name="action_duyet"
                            confirm="Bạn có chắc chắn Duyệt không?"
                            type="object"
                            states="xac_nhan"
                            class="oe_highlight"/>
                    <button string="Hủy"
                            states="xac_nhan,duyet"
                            confirm="Bạn có chắc chắn Hủy không?"
                            name="action_huy"
                            type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="0"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="bsd_so_ct"/>
                            <field name="bsd_ngay_ct"/>
                            <field name="bsd_so_lan"/>
                            <field name="bsd_du_an_id" options="{'no_create':true}"/>
                            <field name="bsd_unit_id" domain="[('bsd_du_an_id', 'in', [bsd_du_an_id])]"
                                   context="{'form_view_ref': 'bsd_du_an.bsd_product_template_form'}"
                                   options="{'no_create':true}"/>
                        </group>
                        <group>
                            <field name="bsd_dt_tt_tt"/>
                            <field name="bsd_dt_tt_tk"/>
                            <field name="bsd_dt_cl_tt"/>
                            <field name="bsd_dt_cl"/>
                            <field name="bsd_dien_giai"/>
                        </group>
                    </group>
                    <group string="PHỤ LỤC HỢP ĐỒNG">
                        <group>
                            <field name="bsd_phu_luc"/>
                        </group>
                        <group>
                            <field name="bsd_loai_pl"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_dt_tt_tree">
        <field name="name">bsd.dt_tt.tree</field>
        <field name="model">bsd.dt_tt</field>
        <field name="arch" type="xml">
            <tree>
                <field name="bsd_so_ct"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="bsd_dt_tt_action">
        <field name="name">Diện tích thực tế</field>
        <field name="res_model">bsd.dt_tt</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="xml">
            <p>Tạo hợp đồng mua bán</p>
        </field>
    </record>
</odoo>