<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_chiet_khau_cstt_form">
        <field name="name">bsd.ck_cstt.form</field>
        <field name="model">bsd.ck_cstt</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="bsd_ma_ck_cstt"/>
                            <field name="bsd_ten_ck_cstt"/>
                            <field name="bsd_dien_giai"/>
                        </group>
                        <group>
                            <field name="bsd_tu_ngay"/>
                            <field name="bsd_den_ngay"/>
                            <field name="state"/>
                        </group>
                        <field name="bsd_ct_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="bsd_chiet_khau_id" options="{'no_create':true}"/>
                                <field name="bsd_ma_ck"/>
                                <field name="bsd_tu_ngay"/>
                                <field name="bsd_den_ngay"/>
                                <field name="bsd_cs_tt_id"/>
                                <field name="bsd_cach_tinh"/>
                                <field name="bsd_tien_ck"/>
                                <field name="bsd_tl_ck"/>
                            </tree>
                        </field>
                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_ck_cstt_tree">
        <field name="name">bsd.ck_cstt.tree</field>
        <field name="model">bsd.ck_cstt</field>
        <field name="arch" type="xml">
            <tree>
                <field name="bsd_ma_ck_cstt"/>
                <field name="bsd_ten_ck_cstt"/>
                <field name="bsd_tu_ngay"/>
                <field name="bsd_den_ngay"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="bsd_chiet_khau_cstt_action">
        <field name="name">Chiết khấu theo chính sách thanh toán</field>
        <field name="res_model">bsd.ck_cstt</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="xml">
            <p>Tạo Chiết khấu theo chính sách thanh toán</p>
        </field>
    </record>
</odoo>