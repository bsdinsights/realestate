<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_du_an_form">
        <field name="name">bsd.du_an.form</field>
        <field name="model">bsd.du_an</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <notebook>
                        <page string="Thông tin chung">
                            <group>
                                <group>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="bsd_ma"/>
                                    <field name="bsd_chu_dau_tu"/>
                                    <field name="bsd_ten"/>
                                    <field name="bsd_loai"/>
                                    <field name="bsd_loai_hinh_su_dung"/>
                                    <field name="bsd_giay_phep_dau_tu"/>
                                    <field name="bsd_ngay_cap_phep"/>
                                    <field name="bsd_dia_chi"/>
                                    <field name="state"/>
                                </group>
                                <group>
                                    <field name="bsd_co_hd_coc"/>
                                    <field name="bsd_ty_le_coc"/>
                                    <field name="bsd_ngay_du_kien_cat_noc"/>
                                    <field name="bsd_ngay_du_kien_ban_giao"/>
                                    <field name="bsd_ngay_hoan_tat_phap_ly"/>
                                    <field name="bsd_ngay_cnqsd_dat"/>
                                    <field name="bsd_so_cho_giu_xe"/>
                                    <field name="bsd_ngay_thuc_te_cat_noc"/>
                                    <field name="bsd_ngay_cap_phep_ban"/>
                                </group>
                            </group>
                            <group string="Định dạng">
                                <group>
                                    <field name="bsd_dinh_dang_du_an"/>
                                    <field name="bsd_dinh_dang_khu"/>
                                </group>
                                <group>
                                    <field name="bsd_dinh_dang_tang"/>
                                </group>
                            </group>
                        </page>
                        <page string="Bán hàng">
                            <group>
                                <group>
                                    <h2 style="margin-top:10px">Phí quản lý</h2>
                                    <field name="bsd_gia_tri_su_dung_dat"/>
                                    <field name="bsd_phi_bao_tri"/>
                                    <field name="bsd_so_thang_phi_quan_ly"/>
                                    <field name="bsd_phi_quan_ly"/>
                                    <field name="bsd_tien_giu_cho"/>
                                    <field name="bsd_tien_dat_coc"/>

                                    <h2 style="margin-top:10px">Hoa hồng</h2>
                                    <field name="bsd_ty_le_hoa_hong_nvbh"/>
                                    <field name="bsd_hoa_hong_quan_ly"/>
                                    <field name="bsd_hoa_hong_nvdv"/>

                                </group>
                                <group>
                                    <h2 style="margin-top:10px">Hiệu lực</h2>
                                    <field name="bsd_int_hieu_luc_bao_gia"/>
                                    <field name="bsd_int_het_han_ky_phieu_coc"/>
                                    <field name="bsd_int_het_han_ky_hop_dong"/>
                                    <field name="bsd_int_canh_bao_sau_giu_cho"/>
                                    <field name="bsd_int_canh_bao_sau_dat_coc"/>
                                    <field name="bsd_time_quan_tam"/>

                                    <h2 style="margin-top:10px">Giữ chỗ</h2>
                                    <field name="bsd_so_giu_cho_NVBH"/>
                                    <field name="bsd_so_giu_cho_can_ho"/>
                                    <field name="bsd_so_giu_cho_theo_ngay"/>
                                    <field name="bsd_so_giu_cho_NVBH_can_ho_ngay"/>
                                    <field name="bsd_huy_giu_cho_truoc_mo_ban"/>
                                    <field name="bsd_hour_huy_giu_cho_sau_mo_ban"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_du_an_tree">
        <field name="name">bsd.du_an.tree</field>
        <field name="model">bsd.du_an</field>
        <field name="arch" type="xml">
            <tree>
                <field name="bsd_ten"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="bsd_du_an_action">
        <field name="name">Dự án</field>
        <field name="res_model">bsd.du_an</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="xml">
            <p>Tạo mới dự án</p>
        </field>
    </record>
</odoo>