<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_ds_tb_form">
        <field name="name">bsd.ds_tb.form</field>
        <field name="model">bsd.ds_tb</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Xác nhận"
                            name="action_xac_nhan"
                            states="nhap"
                            confirm="Bạn có muốn xác nhận yêu cầu không?"
                            attrs="{'invisible': ['|',('id', '=',False)]}"
                            type="object"
                            class="oe_highlight"/>
                    <button string="Duyệt"
                            name="action_duyet"
                            states="xac_nhan"
                            confirm="Bạn có muốn duyệt yêu cầu này không?"
                            type="object"
                            class="oe_highlight"/>
                    <button string="Không duyệt"
                            name="action_khong_duyet"
                            states="xac_nhan"
                            confirm="Bạn có muốn từ chối yêu cầu này không?"
                            type="object"
                            class="oe_highlight"/>
                    <button string="Hủy"
                            name="action_huy"
                            type="object"
                            attrs="{'invisible': ['|',('id', '=',False)]}"
                            states="xac_nhan,nhap"/>
                    <field name="state" widget="statusbar" statusbar_visible="0"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="bsd_ma_ds_tb"/>
                            <field name="bsd_ngay_ds_tb"/>
                        </group>
                        <group>
                            <field name="bsd_du_an_id" options="{'no_create':true}"/>
                            <field name="bsd_loai"/>
                        </group>
                    </group>
                    <field name="bsd_cn_dkbg_ids" nolabel="1">
                        <tree>
                            <field name="bsd_ma_cn_dkbg"/>
                            <field name="bsd_ngay_ttcn"/>
                            <field name="bsd_ngay_ut"/>
                            <field name="state"/>
                            <field name="bsd_da_tao_tbbg"/>
                            <field name="bsd_da_tao_tbnt"/>
                        </tree>
                    </field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_ds_tb_tree">
        <field name="name">bsd.ds_tb.tree</field>
        <field name="model">bsd.ds_tb</field>
        <field name="arch" type="xml">
            <tree>
                <field name="bsd_ma_ds_tb"/>
                <field name="bsd_ngay_ds_tb"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="bsd_ds_tb_action">
        <field name="name">Danh sách thông báo</field>
        <field name="res_model">bsd.ds_tb</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="xml">
            <p>Tạo danh sách thông báo</p>
        </field>
    </record>
</odoo>