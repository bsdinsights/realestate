<?xml version="1.0" encoding="UTF-8" ?>

<templates xml:space="preserve">
    <div t-name="bsd_sale_chart.gio_hang">
        <div class="o_form_view">
            <div class="o_form_sheet_bg"/>
        </div>
    </div>
    <t t-name="bsd_sale_chart.data_filter">
        <div class="o_form_view">
            <div class="o_form_view">
                <div class="o_form_sheet_bg">
                    <div class="clearfix position_relative o_form_sheet">
                        <div class="o_group">
                            <table class="o_group o_inner_group o_group_col_6">
                                <tbody>
                                    <tr class="create_du_an_id">
                                        <td class="o_td_label"><label class="o_form_label">Dự án</label></td>
                                        <td class="o_td_field"></td>
                                    </tr>
                                </tbody>
                            </table>
                            <table class="o_group o_inner_group o_group_col_5">
                                <tbody>
                                    <tr class="create_dot_mb_id">
                                        <td class="o_td_label"><label class="o_form_label">Đợt mở bán</label></td>
                                        <td class="o_td_field"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <button class="btn btn-primary oe_right" id="search">Tìm</button>
                    </div>
                </div>
                <div id="chart">
                </div>
            </div>
        </div>
    </t>

    <t t-name="bsd_sale_chart.chart">
        <t t-foreach="data" t-as="toa">
            <div class="card">
                <t t-set="href" t-value="'#collapseToa'+ toa.headerToa[0]"/>
                <t t-set="hrefId" t-value="'collapseToa'+ toa.headerToa[0]"/>
                <div class="card-header bsd_header_toa" data-toggle="collapse" t-attf-href="{{href}}">
                    <i class="fa fa-search-plus"></i>
                    <a class="card-link" >
                        <span t-esc="toa.headerToa[1]"/>
                    </a>
                    <div class="d-inline-flex flex-row ml-4">
                        <div style="width:20px;height:20px;font-size:16px" class="chuan_bi d-flex justify-content-center ml-2">
                            <div t-esc="toa.state.chuan_bi"></div>
                        </div>
                        <div style="width:20px;height:20px;font-size:16px" class="san_sang d-flex justify-content-center ml-2">
                            <div t-esc="toa.state.san_sang"></div>
                        </div>
                        <div style="width:20px;height:20px;font-size:16px" class="dat_cho d-flex justify-content-center ml-2">
                            <div t-esc="toa.state.dat_cho"></div>
                        </div>
                        <div style="width:20px;height:20px;font-size:16px" class="giu_cho d-flex justify-content-center ml-2">
                            <div t-esc="toa.state.giu_cho"></div>
                        </div>
                        <div style="width:20px;height:20px;font-size:16px" class="dat_coc d-flex justify-content-center ml-2">
                            <div t-esc="toa.state.dat_coc"></div>
                        </div>
                        <div style="width:20px;height:20px;font-size:16px" class="chuyen_coc d-flex justify-content-center ml-2">
                            <div t-esc="toa.state.chuyen_coc"></div>
                        </div>
                        <div style="width:20px;height:20px;font-size:16px" class="da_thu_coc d-flex justify-content-center ml-2">
                            <div t-esc="toa.state.da_thu_coc"></div>
                        </div>
                        <div style="width:20px;height:20px;font-size:16px" class="hoan_tat_dat_coc d-flex justify-content-center ml-2">
                            <div t-esc="toa.state.hoan_tat_dat_coc"></div>
                        </div>
                        <div style="width:20px;height:20px;font-size:16px" class="thanh_toan_dot_1 d-flex justify-content-center ml-2">
                            <div t-esc="toa.state.thanh_toan_dot_1"></div>
                        </div>
                        <div style="width:20px;height:20px;font-size:16px" class="ky_thoa_thuan_coc d-flex justify-content-center ml-2">
                            <div t-esc="toa.state.ky_thoa_thuan_coc"></div>
                        </div>
                        <div style="width:20px;height:20px;font-size:16px" class="du_dieu_kien d-flex justify-content-center ml-2">
                            <div t-esc="toa.state.du_dieu_kien"></div>
                        </div>
                        <div style="width:20px;height:20px;font-size:16px" class="da_ban d-flex justify-content-center ml-2">
                            <div t-esc="toa.state.da_ban"></div>
                        </div>
                    </div>
                </div>
                <div t-attf-id="{{hrefId}}" class="collapse">
                    <t t-foreach="toa.detailToa" t-as="tang">
                        <div class="card">
                            <t t-set="hrefTang" t-value="'#collapseTang'+ tang.headerTang[0]"/>
                            <t t-set="hrefIdTang" t-value="'collapseTang'+ tang.headerTang[0]"/>
                            <div class="card-header bsd_header_tang" data-toggle="collapse" t-attf-data-target="{{hrefTang}}">
                                <i class="fa fa-plus"></i>
                                <a class="card-link">
                                    <span t-esc="tang.headerTang[1]"/>
                                </a>
                            </div>
                            <div t-attf-id="{{hrefIdTang}}" class="collapse">
                                <div class="container-fluid mt-2">
                                    <div class="row">
                                        <t t-foreach="tang.detailTang" t-as="unit">
                                            <div class="col-auto mb-2">
                                                <div t-attf-class="card {{unit[6]}}" style="width: 200px;">
                                                    <div class="card-body text-center">
                                                        <h5 class="card-title"><span t-esc="unit[5]"/></h5>
                                                        <div>Giữ chỗ:<span t-esc="unit[7]"/></div>
                                                        <div>Giá bán: <span t-esc="unit[8]"/><span>đ</span></div>
                                                        <div>Quan tâm BĐS</div>
                                                        <a href="#" class="card-link">Tạo giữ chỗ</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </t>
</templates>