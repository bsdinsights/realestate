                                <group>
                                    <field name="id" invisible="1"/>
                                    <field name="bsd_cs_tt_ht_id" readonly="1" force_save="1"/>
                                </group>
                                <group>
                                    <field name="bsd_cs_tt_moi_id"
                                           attrs="{'required': [('bsd_loai_td', '=', 'pt_tt')]}"
                                           domain="[('bsd_du_an_id', '=', bsd_du_an_id),
                                                    ('state','=','duyet'),
                                                    ('id', '!=', bsd_cs_tt_ht_id)]"
                                           options="{'no_create':true}"/>
