<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record model="ir.ui.view" id="bsd_tb_tt_form">
            <field name="name">bsd.tb_tt.form</field>
            <field name="model">bsd.tb_tt</field>
            <field name="arch" type="xml">
                <form duplicate="false">
                    <header>
                        <button string="Xác nhận"
                                name="action_xac_nhan"
                                states="nhap"
                                confirm="Bạn có muốn xác nhận yêu cầu không?"
                                attrs="{'invisible': ['|',('id', '=',False)]}"
                                type="object"
                                class="oe_highlight"/>
                        <button string="In thông báo"
                                name="action_in_tb"
                                attrs="{'invisible': [('state', 'in',['nhap','huy'])]}"
                                type="object"
                                class="oe_highlight"/>
                        <button string="Gửi thông báo"
                                name="action_gui_tb"
                                states="xac_nhan"
                                type="object"
                                attrs="{'invisible': ['|',('bsd_ngay_in', '=',False)]}"
                                class="oe_highlight"/>
                        <button string="Hủy"
                                name="action_huy"
                                type="object"
                                confirm="Bạn có muốn hủy yêu cầu này không ?"
                                attrs="{'invisible': ['|',('id', '=',False)]}"
                                states="nhap"/>
                        <field name="state" widget="statusbar" statusbar_visible="0"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="bsd_ma_tb"/>
                                <field name="bsd_ngay_tao_tb"/>
                                <field name="bsd_tieu_de"/>
                                <field name="bsd_loai"/>
                                <field name="bsd_khach_hang_id"
                                       context="{'form_view_ref': 'bsd_kinh_doanh.bsd_res_partner_cn_form'}"
                                       options="{'no_create':true}"/>
                            </group>
                            <group>
                                <field name="bsd_hd_ban_id"
                                       options="{'no_create':true}"
                                       domain="[('bsd_khach_hang_id', '=', bsd_khach_hang_id)]"/>
                                <field name="bsd_dot_tt_id"
                                       options="{'no_create':true}"
                                       domain="[('bsd_hd_ban_id', '=', bsd_hd_ban_id),('bsd_loai','=','dtt')]"/>
                                <field name="bsd_du_an_id"
                                       options="{'no_create':true}"
                                       readonly="1"
                                       force_save="1"/>
                                <field name="bsd_unit_id" readonly="1" force_save="1"
                                       context="{'form_view_ref': 'bsd_du_an.bsd_product_template_form'}"
                                       domain="[('bsd_du_an_id', '=', bsd_du_an_id)]"
                                       options="{'no_create':true}"/>
                                <field name="bsd_dien_giai"/>

                            </group>
                        </group>
                        <group string="XÁC NHẬN">
                            <group>
                                <field name="bsd_ngay_in"/>
                                <field name="bsd_nguoi_in_id"/>
                            </group>
                            <group>
                                <field name="bsd_ngay_gui"/>
                                <field name="bsd_nguoi_gui_id"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="bsd_tb_tt_tree">
            <field name="name">bsd.tb_tt.tree</field>
            <field name="model">bsd.tb_tt</field>
            <field name="arch" type="xml">
                <tree decoration-warning="state=='xac_nhan'"
                      decoration-success="state=='hoan_thanh'"
                      decoration-muted="state=='huy'"
                >
                    <field name="bsd_ma_tb"/>
                    <field name="bsd_ngay_tao_tb"/>
                    <field name="bsd_du_an_id"/>
                    <field name="bsd_unit_id"/>
                    <field name="bsd_hd_ban_id"/>
                    <field name="bsd_dot_tt_id"/>
                    <field name="bsd_khach_hang_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="bsd_tb_tt_action">
            <field name="name">Thông báo thanh toán</field>
            <field name="res_model">bsd.tb_tt</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="xml">
                <p>Tạo thông báo thanh toán</p>
            </field>
        </record>
    </data>
</odoo>