<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="bsd_hd_ban_report_wizard_form">
            <field name="name">bsd.hd_ban.report.wizard.form</field>
            <field name="model">bsd.hd_ban.report.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="In TTDC / Hợp đồng">
                    <group>
                        <group>
                            <field name="bsd_mau_in"/>
                            <field name="bsd_hd_ban_id"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_in" string="In" type="object" class="oe_highlight"/>
                        <button string="Hủy" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="bsd_giay_in_ttdc" model="report.paperformat">
            <field name="name">Giấy in TTĐC</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">17</field>
            <field name="margin_right">17</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">3</field>
            <field name="dpi">90</field>
        </record>

        <act_window id="bsd_hd_ban_report_action"
                    name="Chọn mẫu in hợp đồng"
                    res_model="bsd.hd_ban.report.wizard"
                    view_mode="form"
                    target="new"/>
        <report id="bsd_mau_in_hdb"
                model="bsd.hd_ban.report.wizard"
                string="Hợp đồng"
                report_type="qweb-html"
                name="bsd_dich_vu.bsd_hd_ban_view"
                menu="False"/>
        <record id="bsd_mau_in_ttdc" model="ir.actions.report">
            <field name="name">Thỏa thuận đặt cọc</field>
            <field name="model">bsd.hd_ban.report.wizard</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">bsd_dich_vu.bsd_ttdc_view</field>
            <field name="multi">False</field>
            <field name="paperformat_id" ref="bsd_dich_vu.bsd_giay_in_ttdc"/>
        </record>
        <template id="bsd_hd_ban_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="doc" t-value="doc.with_context(lang=lang)" />
                    <t t-call="web.external_layout">
                        <div class="page bsd_font">
                            <div class="row">
                                <div>Hợp đồng</div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
