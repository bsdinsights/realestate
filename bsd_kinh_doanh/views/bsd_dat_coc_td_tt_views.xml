                                        <field name="bsd_tu_ngay"/>
                                        <field name="bsd_den_ngay"/>
                                        <field name="bsd_ngay_hldc"/>
                                        <field name="bsd_gia_tri"/>
                                        <field name="bsd_dot_mb_id" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="company_id" invisible="1"/>
                                    </tree>
                                </field>
                            </group>
                            <group string="MỚI">
                                <field name="bsd_km_moi_ids"
                                       context="{'default_bsd_dot_mb_id':bsd_dot_mb_id,
                                                 'default_bsd_td_tt_id': id}"
                                       nolabel="1">
