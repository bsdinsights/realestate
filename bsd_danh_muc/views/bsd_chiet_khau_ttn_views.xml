<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_chiet_khau_ttn_form">
        <field name="name">bsd.ck_ttn.form</field>
        <field name="model">bsd.ck_ttn</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Xác nhận"
                            name="action_xac_nhan"
                            class="oe_highlight"
                            confirm="Bạn có muốn Xác nhận yêu cầu không?"
                            attrs="{'invisible': ['|',('id', '=',False),('state','not in',['nhap'])]}"
                            type="object"/>
                    <button string="Duyệt"
                            name="action_duyet"
                            class="oe_highlight"
                            states="xac_nhan"
                            confirm="Bạn có muốn Duyệt yêu cầu không?"
                            type="object"/>
                    <button string="Không duyệt"
                            name="action_khong_duyet"
                            class="oe_highlight"
                            states="xac_nhan"
                            type="object"
                            confirm="Bạn có muốn Từ chối yêu cầu không?"/>
                    <button string="Hủy"
                            name="action_huy"
                            states="xac_nhan,duyet"
                            confirm="Bạn có muốn Hủy yêu cầu không?"
                            type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="0"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="bsd_ma_ck_ttn"/>
                            <field name="bsd_ten_ck_ttn"/>
                            <field name="bsd_dien_giai"/>
                        </group>
                        <group>
                            <field name="bsd_tu_ngay"/>
                            <field name="bsd_den_ngay"/>
                        </group>
                        <field name="bsd_ct_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="bsd_chiet_khau_id" options="{'no_create':true}"/>
                                <field name="bsd_ma_ck"/>
                                <field name="bsd_tu_ngay"/>
                                <field name="bsd_den_ngay"/>
                                <field name="bsd_ngay_tt"/>
                                <field name="bsd_tl_tt"/>
                                <field name="bsd_cach_tinh"/>
                                <field name="bsd_tien_ck"/>
                                <field name="bsd_tl_ck"/>
                            </tree>
                        </field>
                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_ck_ttn_tree">
        <field name="name">bsd.ck_ttn.tree</field>
        <field name="model">bsd.ck_ttn</field>
        <field name="arch" type="xml">
            <tree>
                <field name="bsd_ma_ck_ttn"/>
                <field name="bsd_ten_ck_ttn"/>
                <field name="bsd_tu_ngay"/>
                <field name="bsd_den_ngay"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="bsd_chiet_khau_ttn_action">
        <field name="name">Chiết khấu thanh toán nhanh</field>
        <field name="res_model">bsd.ck_ttn</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="xml">
            <p>Tạo chiết khấu thanh toán nhanh</p>
        </field>
    </record>
</odoo>