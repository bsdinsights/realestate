<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_res_partner_dn_form">
        <field name="name">bsd.res.partner.dn.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form duplicate="false">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="0"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_giu_cho" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('bsd_sl_giu_cho', '=', 0)]}">
                            <field name="bsd_sl_giu_cho" widget="statinfo" string="Giữ chỗ"/>
                        </button>
                    </div>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_128&quot;}"/>
                    <div class="oe_title">
                        <h2>
                            <field name="name" required="1"/>
                        </h2>
                        <div class="o_row no-gutters d-flex">
                            <label for="bsd_ma_kh"/>
                            <field name="bsd_ma_kh"/>
                        </div>
                    </div>
                    <notebook>
                        <page string="THÔNG TIN CÔNG TY">
                            <group>
                                <group>
                                    <field name="bsd_la_kh" invisible="1"/>
                                    <field name="is_company" invisible="1"/>
                                    <field name="bsd_ten_cty_en"/>
                                    <field name="bsd_loai_cty_ids"
                                           widget="many2many_tags"
                                           required="1"
                                           options="{'no_create': true}"/>
                                    <field name="bsd_cty_me"/>
                                    <field name="bsd_phan_loai"/>
                                    <field name="bsd_nguoi_dd_id"
                                           context="{'form_view_ref': 'bsd_kinh_doanh.bsd_res_partner_cn_form'}"
                                    />
                                    <field name="bsd_nguoi_uq"/>
                                    <field name="phone" required="1"/>
                                    <field name="bsd_phone_2"/>
                                    <field name="email" string="Email"/>
                                    <field name="bsd_email_2"/>
                                    <field name="bsd_fax"/>
                                    <field name="website" string="Website"/>
                                </group>
                                <group>
                                    <field name="bsd_so_gpkd" required="1"/>
                                    <field name="bsd_ngay_gpkd"/>
                                    <field name="bsd_noi_gpkd"/>
                                    <field name="bsd_mt_gpkd"/>
                                    <field name="vat"/>
                                    <field name="bsd_ngay_vat"/>
                                    <field name="bsd_noi_vat"/>
                                    <field name="bsd_ngay_tl"/>
                                    <field name="bsd_nganh_nghe" widget="many2many_tags"/>
                                    <field name="bsd_mt_cty"/>
                                    <field name="bsd_ma_sic"/>
                                    <field name="bsd_quyen_sh"/>
                                </group>
                            </group>
                            <group string="ĐỊA CHỈ">
                                <group>
                                    <field name="bsd_dia_chi_lh"/>
                                    <field name="bsd_quoc_gia_lh_id" options="{'no_create':true}" required="1"/>
                                    <field name="bsd_tinh_lh_id" domain="[('country_id', 'in',[bsd_quoc_gia_lh_id])]"
                                           options="{'no_create':true}" required="1"/>
                                </group>
                                <group>
                                    <field name="bsd_quan_lh_id" domain="[('bsd_tinh_thanh_id', 'in',[bsd_tinh_lh_id])]"
                                           options="{'no_create':true}" required="1"/>
                                    <field name="bsd_phuong_lh_id" domain="[('bsd_quan_huyen_id', 'in',[bsd_quan_lh_id])]"
                                           options="{'no_create':true}" required="1"/>
                                    <field name="bsd_so_nha_lh" required="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Giữ chỗ">
                            <field name="bsd_giu_cho_ids">
                                <tree create="false">
                                    <field name="bsd_ma_gc"/>
                                    <field name="bsd_du_an_id"/>
                                    <field name="bsd_unit_id"/>
                                    <field name="bsd_ngay_hh_gc"/>
                                    <field name="bsd_stt_bg"/>
                                    <field name="bsd_ngay_hh_bg"/>
                                    <field name="state"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Báo giá">
                            <field name="bsd_bao_gia_ids">
                                <tree create="false" duplicate="false" delete="false">
                                    <field name="bsd_ma_bao_gia"/>
                                    <field name="bsd_giu_cho_id"/>
                                    <field name="bsd_du_an_id"/>
                                    <field name="bsd_unit_id"/>
                                    <field name="bsd_cs_tt_id"/>
                                    <field name="bsd_tong_gia"/>
                                    <field name="state"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Đặt cọc">
                            <field name="bsd_dat_coc_ids">
                                <tree create="false" duplicate="false" delete="false">
                                    <field name="bsd_ma_dat_coc"/>
                                    <field name="bsd_du_an_id"/>
                                    <field name="bsd_unit_id"/>
                                    <field name="bsd_ngay_ky_dc"/>
                                    <field name="bsd_thanh_toan"/>
                                    <field name="state"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="bsd_res_partner_dn_tree">
        <field name="name">bsd.res.partner.dn.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree duplicate="false">
                <field name="bsd_ma_kh"/>
                <field name="name"/>

            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="bsd_res_partner_dn_kanban">
        <field name="name">bsd.res.partner.dn.kanban</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="id"/>
                    <field name="color"/>
                    <field name="display_name"/>
                    <field name="email"/>
                    <field name="is_company"/>
                    <field name="phone"/>
                    <field name="mobile"/>
                    <field name="image_128"/>
                    <field name="parent_id"/>
                    <field name="type"/>
                    <field name="bsd_dia_chi_lh"/>
                    <field name="bsd_sl_giu_cho"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                                <t t-if="!record.is_company.raw_value">
                                    <t t-if="record.type.raw_value === 'delivery'" t-set="placeholder" t-value="'/base/static/img/truck.png'"/>
                                    <t t-elif="record.type.raw_value === 'invoice'" t-set="placeholder" t-value="'/base/static/img/money.png'"/>
                                    <t t-else="" t-set="placeholder" t-value="'/base/static/img/avatar_grey.png'"/>
                                    <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('res.partner', 'image_128', record.id.raw_value,  placeholder)}')">
                                        <img class="o_kanban_image_inner_pic" t-if="record.parent_id.raw_value" t-att-alt="record.parent_id.value" t-att-src="kanban_image('res.partner', 'image_128', record.parent_id.raw_value)"/>
                                    </div>
                                    <div class="o_kanban_image rounded-circle d-md-none" t-attf-style="background-image:url('#{kanban_image('res.partner', 'image_128', record.id.raw_value,  placeholder)}')">
                                        <img class="o_kanban_image_inner_pic" t-if="record.parent_id.raw_value" t-att-alt="record.parent_id.value" t-att-src="kanban_image('res.partner', 'image_128', record.parent_id.raw_value)"/>
                                    </div>
                                </t>
                                <t t-else="">
                                    <t t-set="placeholder" t-value="'/base/static/img/company_image.png'"/>
                                    <div class="o_kanban_image_fill_left o_kanban_image_full" t-attf-style="background-image: url(#{kanban_image('res.partner', 'image_128', record.id.raw_value, placeholder)})" role="img"/>
                                </t>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title oe_partner_heading"><field name="name"/></strong>
                                    <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                    <div><span>Mã:</span><field name="bsd_ma_kh"/></div>
                                    <div><field name="bsd_loai_cty_ids" widget="many2many_tags"/></div>
                                    <ul>
                                        <li t-if="record.phone.raw_value" class="o_text_overflow"><field name="phone"/></li>
                                        <li t-if="record.email.raw_value" class="o_text_overflow"><field name="email"/></li>
<!--                                        <li t-if="record.bsd_dia_chi_lh.raw_value" class="o_text_overflow"><field name="bsd_dia_chi_lh"/></li>-->
                                        <li name="tien_ich">
                                            <span class="badge badge-pill" modifiers="{}">
                                                <i class="fa fa-fw fa-usd" aria-label="Giữ chỗ" role="img" title="Giữ chỗ" modifiers="{}"></i>
                                                <field name="bsd_sl_giu_cho"/>
                                            </span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
        </field>
    </record>

    <record model="ir.ui.view" id="bsd_res_partner_dn_filter">
        <field name="name">bsd.res.partner.dn.filter</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search>
                <field name="bsd_ma_kh"/>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="bsd_kh_dn_action">
        <field name="name">Khách hàng doanh nghiệp</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_company','=',True)]</field>
        <field name="help" type="xml">
            <p>Tạo mới khách hàng doanh nghiệp</p>
        </field>
        <field name="context">{'default_company_type':'company', 'default_is_company':True,'default_bsd_la_kh':True}</field>
        <field name="view_id" ref="bsd_res_partner_dn_tree"/>
        <field name="view_ids"
               eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'kanban', 'view_id': ref('bsd_res_partner_dn_kanban')}),
                      (0, 0, {'view_mode': 'tree', 'view_id': ref('bsd_res_partner_dn_tree')}),
                      (0, 0, {'view_mode': 'form', 'view_id': ref('bsd_res_partner_dn_form')})]"/>
        <field name="search_view_id" ref="bsd_kinh_doanh.bsd_res_partner_dn_filter"/>        
    </record>
</odoo>