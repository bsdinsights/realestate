                                <field name="bsd_dsh_moi_ids"
                                       nolabel="1">
                                    <tree editable="bottom">
                                        <field name="bsd_ma_kh"/>
                                        <field name="bsd_dong_sh_id"
                                               domain="[('id', '!=', parent.bsd_khach_hang_id)]"
                                               string="Đồng sở hữu"/>
                                        <field name="mobile"/>
                                        <field name="email" string="Email"/>
                                        <field name="bsd_quan_he"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Khuyến mãi" attrs="{'invisible':[('bsd_loai_td', '!=', 'khuyen_mai')]}">
                            <group string="HIỆN TẠI">
                                <field name="bsd_km_ht_ids" nolabel="1" readonly="1" force_save="1">
                                    <tree>
                                        <field name="bsd_khuyen_mai_id"
                                               options="{'no_create':true}"/>
                                        <field name="bsd_ma_km"/>
                                        <field name="bsd_tu_ngay"/>
                                        <field name="bsd_den_ngay"/>
                                        <field name="bsd_ngay_hldc"/>
                                        <field name="bsd_gia_tri"/>
                                        <field name="bsd_dot_mb_id" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="company_id" invisible="1"/>
                                    </tree>
                                </field>
                            </group>
                            <group string="MỚI">
                                <field name="bsd_km_moi_ids"
                                       context="{'default_bsd_dot_mb_id':bsd_dot_mb_id}"
                                       nolabel="1">
                                    <tree editable="bottom">
                                        <field name="bsd_khuyen_mai_id"
                                               options="{'no_create':true}"/>
                                        <field name="bsd_ma_km"/>
                                        <field name="bsd_tu_ngay"/>
                                        <field name="bsd_den_ngay"/>
                                        <field name="bsd_ngay_hldc"/>
                                        <field name="bsd_gia_tri"/>
                                        <field name="bsd_dot_mb_id" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="company_id" invisible="1"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Xác nhận"
                            name="action_xac_nhan"
                            class="oe_highlight"
                            type="object"/>
                    <button string="Hủy" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="bsd_dat_coc_td_tt_action_popup">
        <field name="name">Thay đổi thông tin dặt cọc</field>
        <field name="res_model">bsd.dat_coc.td_tt</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="bsd_dat_coc_td_tt_form_popup"/>
        <field name="target">new</field>
    </record>
</odoo>