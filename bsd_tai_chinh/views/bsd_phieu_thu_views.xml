                            <field name="bsd_dat_coc_id" force_save="1" readonly="1"
                                   options="{'no_create':true}"
                                   domain="[('bsd_khach_hang_id','in',[bsd_khach_hang_id]),('bsd_unit_id','in',[bsd_unit_id]),
                                            ('state','=','xac_nhan')]"
                                   attrs="{'required':[('bsd_loai_pt','=','dat_coc')],
                                           'invisible':[('bsd_loai_pt','!=','dat_coc')]}"/>
                            <field name="bsd_hd_ban_id" force_save="1" readonly="1"
                                   options="{'no_create':true}"
                                   domain="[('bsd_khach_hang_id','in',[bsd_khach_hang_id]),('bsd_unit_id','in',[bsd_unit_id]),
                                            ('state','not in',['thanh_ly','huy'])]"
                                   attrs="{'required':[('bsd_loai_pt','in',['dot_tt','pql','pbt','pps'])],
                                           'invisible':[('bsd_loai_pt','not in',['dot_tt','pql','pbt','pps'])]}"
                            />
                            <field name="bsd_dot_tt_id" force_save="1" readonly="1"
                                   options="{'no_create':true}"
                                   attrs="{'required':[('bsd_loai_pt','in',['dot_tt','pql','pbt'])],
                                           'invisible':[('bsd_loai_pt','not in',['dot_tt','pql','pbt','pps'])]}"
                            />
                            <field name="currency_id"/>
                            <field name="company_id" invisible="1"/>
                            <field name="bsd_tien"/>
                            <field name="bsd_tien_da_tt"/>
                            <field name="bsd_tien_con_lai"/>
                            <field name="bsd_dien_giai"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="bsd_phieu_thu_action_popup">
        <field name="name">Thanh toán</field>
        <field name="res_model">bsd.phieu_thu</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'form', 'view_id': ref('bsd_phieu_thu_form_popup')})]"/>
    </record>
</odoo>