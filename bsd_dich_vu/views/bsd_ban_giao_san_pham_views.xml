<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_bg_sp_form">
        <field name="name">bsd.bg_sp.form</field>
        <field name="model">bsd.bg_sp</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Xác nhận"
                            name="action_xac_nhan"
                            states="nhap"
                            confirm="Bạn có muốn xác nhận yêu cầu không?"
                            attrs="{'invisible': ['|',('id', '=',False)]}"
                            type="object"
                            class="oe_highlight"/>
                    <button string="In biên bản"
                            name="action_in"
                            states="xac_nhan"
                            type="object"
                            class="oe_highlight"/>
                    <button string="Ký biên bản"
                            name="action_ky"
                            states="xac_nhan"
                            attrs="{'invisible': ['|', ('bsd_ngay_in', '=', False)]}"
                            type="object"
                            class="oe_highlight"/>
                    <button string="Hủy"
                            name="action_huy"
                            type="object"
                            attrs="{'invisible': ['|',('id', '=',False)]}"
                            states="xac_nhan,nhap"/>
                    <field name="state" widget="statusbar" statusbar_visible="0"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="bsd_ma_bg"/>
                            <field name="bsd_ngay_tao_bg"/>
                            <field name="bsd_ten_bg"/>
                            <field name="bsd_du_an_id" options="{'no_create':true}"/>
                            <field name="bsd_hd_ban_id"
                                   domain="['&amp;',('bsd_du_an_id', '=', bsd_du_an_id),
                                            '&amp;',('bsd_ngay_cn', '!=', False),
                                            '|',('state', '=', 'du_dkbg'),('bsd_duyet_bgdb', '=', True)]"
                                   options="{'no_create':true}"/>
                            <field name="bsd_unit_id" readonly="1"
                                   context="{'form_view_ref': 'bsd_du_an.bsd_product_template_form'}"/>
                            <field name="bsd_unit_id" invisible="1"
                                   context="{'form_view_ref': 'bsd_du_an.bsd_product_template_form'}"/>
                        </group>
                        <group>
                            <field name="bsd_duyet_bgdb"/>
                            <field name="bsd_khach_hang_id" readonly="1"
                                   context="{'form_view_ref': 'bsd_kinh_doanh.bsd_res_partner_cn_form'}"/>
                            <field name="bsd_khach_hang_id" invisible="1"
                                   context="{'form_view_ref': 'bsd_kinh_doanh.bsd_res_partner_cn_form'}"/>
                            <field name="bsd_tien_tt_hd"/>
                            <label for="bsd_tl_tt_hd"/>
                            <div class="o_row no-gutters d-flex">
                                <field name="bsd_tl_tt_hd" class="mr-1"/>
                                <span>%</span>
                            </div>
                            <label for="bsd_dt_tt"/>
                            <div class="o_row no-gutters d-flex">
                                <field name="bsd_dt_tt" class="mr-1"/>
                                <span>m2</span>
                            </div>
                            <field name="bsd_ngay_dkbg"/>
                            <field name="company_id" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group string="XÁC NHẬN">
                        <group>
                            <field name="bsd_ngay_in"/>
                            <field name="bsd_nguoi_in_id"/>
                        </group>
                        <group>
                            <field name="bsd_ngay_bg_tt"/>
                            <field name="bsd_nguoi_bg_tt_id"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_bg_sp_tree">
        <field name="name">bsd.bg_sp.tree</field>
        <field name="model">bsd.bg_sp</field>
        <field name="arch" type="xml">
            <tree>
                <field name="bsd_ma_bg"/>
                <field name="bsd_ngay_tao_bg"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="bsd_bg_sp_action">
        <field name="name">Bàn giao sản phẩm</field>
        <field name="res_model">bsd.bg_sp</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="xml">
            <p>Tạo nghiệm thu</p>
        </field>
    </record>
</odoo>