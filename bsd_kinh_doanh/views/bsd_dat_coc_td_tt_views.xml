                                                name="action_khong_duyet"
                                                states="xac_nhan"
                                                type="object"
                                                confirm="Bạn có muốn Từ chối yêu cầu không?"/>
                                    </tree>
                                </field>
                            </group>
                            <button string="Thêm CK đặc biệt"
                                    type="object"
                                    name="action_ck_db"
                                    states="xac_nhan"
                                    class="oe_highlight oe_right"/>
                        </page>
                        <page string="Lịch thanh toán"
                              attrs="{'invisible':[('bsd_loai_td', 'not in', ['pt_tt', 'dk_bg', 'ck_tm'])]}">
