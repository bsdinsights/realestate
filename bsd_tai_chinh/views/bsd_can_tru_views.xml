<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_can_tru_form">
        <field name="name">bsd.can_tru.form</field>
        <field name="model">bsd.can_tru</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Cấn trừ"
                            name="action_can_tru"
                            type="object"
                            attrs="{'invisible': ['|',('id', '=',False),('state','not in',['nhap'])]}"
                            class="oe_highlight"
                    />
                    <button string="Hủy cấn trừ"
                            name="action_huy_can_tru"
                            type="object"
                            states="can_tru"
                    />
                    <field name="state" widget="statusbar" statusbar_visible="0"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="bsd_so_ct"/>
                            <field name="bsd_ngay_ct"/>
                            <field name="bsd_khach_hang_id"
                                   options="{'no_create':true}"/>
                            <field name="bsd_ma_kh" readonly="1" force_save="1"/>
                            <field name="bsd_hd_ban_id"
                                   domain="[('bsd_khach_hang_id', '=',bsd_khach_hang_id)]"
                                   options="{'no_create':true}"/>
                        </group>
                        <group>
                            <field name="bsd_du_an_id" readonly="1" force_save="1"/>
                            <field name="bsd_phieu_thu_ids" widget="many2many_tags"
                                   options="{'no_create':true}"
                                   context="{'show_info':True}"
                                   domain="[('bsd_khach_hang_id', '=', bsd_khach_hang_id),
                                            ('bsd_du_an_id', '=', bsd_du_an_id),
                                            ('bsd_loai_pt', 'in', ['tra_truoc']),
                                            ('bsd_tien_con_lai', '>', 0),
                                            ('state', '=', 'da_gs')]"/>
                            <field name="bsd_tong_tien_pt" readonly="1" force_save="1"/>
                            <field name="bsd_tien_can_tru"/>
                            <field name="company_id" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <button string="Load"
                                    name="action_load"
                                    type="object"
                                    class="oe_highlight oe_right"/>
                    </group>
                    <field name="bsd_ct_ids" nolabel="1" >
                        <tree editable="top" create="false" delete="false">
                            <field name="company_id" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="bsd_loai_ct" readonly="1" />
                            <field name="bsd_so_ct" readonly="1" />
                            <field name="bsd_hd_ban_id" readonly="1" />
                            <field name="bsd_ngay_ct" readonly="1" />
                            <field name="bsd_tien" readonly="1" />
                            <field name="bsd_tien_phai_tt" readonly="1" />
                            <field name="bsd_tien_can_tru"/>
                            <field name="bsd_gc_tc_id" invisible="1" />
                            <field name="bsd_giu_cho_id" invisible="1" />
                            <field name="bsd_dat_coc_id" invisible="1" />
                            <field name="bsd_dot_tt_id" invisible="1" />
                            <field name="bsd_phi_ps_id" invisible="1" />
                            <field name="bsd_loai_ct" invisible="1" />
                            <field name="bsd_so_ct" invisible="1" />
                            <field name="bsd_hd_ban_id" invisible="1" />
                            <field name="bsd_ngay_ct" invisible="1" />
                            <field name="bsd_tien" invisible="1" />
                            <field name="bsd_tien_phai_tt" invisible="1" />
                        </tree>
                    </field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_can_tru_tree">
        <field name="name">bsd.can_tru.tree</field>
        <field name="model">bsd.can_tru</field>
        <field name="arch" type="xml">
            <tree>
                <field name="bsd_khach_hang_id"/>
                <field name="bsd_ma_kh" readonly="1"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="bsd_can_tru_action">
        <field name="name">Cấn trừ công nợ</field>
        <field name="res_model">bsd.can_tru</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="xml">
            <p>Cấn trừ công nợ khách hàng</p>
        </field>
    </record>
</odoo>