                                    <field name="bsd_ma"/>
                                    <field name="bsd_ngay"/>
                                    <field name="bsd_tieu_de"/>
                                    <field name="bsd_loai_td"/>
                                    <field name="bsd_dat_coc_id" readonly="1" force_save="1"/>
                                </group>
                                <group>
                                    <field name="bsd_du_an_id"
                                            readonly="1" force_save="1"
                                           options="{'no_create':true}"/>
                                    <field name="bsd_unit_id" readonly="1" force_save="1"
                                           options="{'no_create':true}"/>
                                    <field name="bsd_khach_hang_id" readonly="1" force_save="1"/>
                                    <field name="bsd_dot_mb_id" readonly="1" force_save="1"/>
                                    <field name="bsd_dien_giai"/>
                                </group>
                            </group>
                        </page>
                        <page string="Đồng sở hữu" attrs="{'invisible':[('bsd_loai_td', '!=', 'dong_sh')]}">
                            <group string="Đồng sở hữu hiện tại">
                                <field name="bsd_dsh_ht_ids" nolabel="1" readonly="1" force_save="1">
                                    <tree>
