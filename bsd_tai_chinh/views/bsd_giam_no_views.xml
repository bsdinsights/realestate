<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_giam_no_form">
        <field name="name">bsd.giam_no.form</field>
        <field name="model">bsd.giam_no</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="0"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="bsd_so_ct"/>
                            <field name="bsd_ngay_ct"/>
                            <field name="bsd_loai_dc"/>
                            <field name="bsd_dien_giai"/>
                        </group>
                        <group>
                            <field name="bsd_khach_hang_id"
                                   context="{'form_view_ref': 'bsd_kinh_doanh.bsd_res_partner_cn_form'}"
                                   options="{'no_create':true}"/>
                            <field name="bsd_du_an_id"/>
                            <field name="bsd_unit_id"/>
                            <field name="bsd_tien"/>
                            <field name="company_id" invisible="1"/>
                            <field name="currency_id"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_giam_no_tree">
        <field name="name">bsd.giam_no.tree</field>
        <field name="model">bsd.giam_no</field>
        <field name="arch" type="xml">
            <tree>
                <field name="bsd_so_ct"/>
                <field name="bsd_ngay_ct"/>
                <field name="bsd_khach_hang_id"/>
                <field name="bsd_du_an_id"/>
                <field name="bsd_unit_id"/>
                <field name="bsd_tien"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="bsd_giam_no_action">
        <field name="name">Điều chỉnh giảm</field>
        <field name="res_model">bsd.giam_no</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="xml">
            <p>Điều chỉnh giảm công nợ khách hàng</p>
        </field>
    </record>
</odoo>