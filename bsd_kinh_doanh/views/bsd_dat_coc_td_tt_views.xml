                                <field name="bsd_dsh_ht_ids" nolabel="1" readonly="1" force_save="1">
                                    <tree>
                                        <field name="bsd_ma_kh"/>
                                        <field name="bsd_dong_sh_id" string="Đồng sở hữu"/>
                                        <field name="mobile"/>
                                        <field name="email" string="Email"/>
                                        <field name="bsd_quan_he"/>
                                    </tree>
                                </field>
                            </group>
                            <group string="MỚI">
                                <field name="bsd_dsh_moi_ids"
                                       nolabel="1">
                                    <tree editable="bottom">
                                        <field name="bsd_ma_kh"/>
                                        <field name="bsd_dong_sh_id"
                                               domain="[('id', '!=', parent.bsd_khach_hang_id)]"
                                               string="Đồng sở hữu"/>
                                        <field name="mobile"/>
                                        <field name="email" string="Email"/>
                                        <field name="bsd_quan_he"/>
                                    </tree>
                                </field>
                            </group>
