<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_wizard_xn_in_ttdc_form">
        <field name="name">bsd.wizard.xn_in_ttdc.form</field>
        <field name="model">bsd.wizard.xn_in_ttdc</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="bsd_hd_ban_id"/>
                        </group>
                        <group>
                            <field name="bsd_ngay_in_ttdc"/>
                            <field name="bsd_ma_ttdc"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_xac_nhan" type="object"
                            string="Xác nhận" class="oe_highlight"/>
                    <button special="cancel" string="Hủy bỏ"/>
                </footer>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="bsd_wizard_xn_in_ttdc_action">
        <field name="name">Xác nhận ngày in TTĐC/HĐĐC</field>
        <field name="res_model">bsd.wizard.xn_in_ttdc</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>

    <record model="ir.ui.view" id="bsd_wizard_xn_in_hdb_form">
        <field name="name">bsd.wizard.xn_in_hdb.form</field>
        <field name="model">bsd.wizard.xn_in_hdb</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="bsd_hd_ban_id"/>
                        </group>
                        <group>
                            <field name="bsd_ngay_in_hdb"/>
                            <field name="bsd_ma_so_hd"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_xac_nhan" type="object"
                            string="Xác nhận" class="oe_highlight"/>
                    <button special="cancel" string="Hủy bỏ"/>
                </footer>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="bsd_wizard_xn_in_hdb_action">
        <field name="name">Xác nhận ngày in HĐMB</field>
        <field name="res_model">bsd.wizard.xn_in_hdb</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>
    <record model="ir.ui.view" id="bsd_wizard_ky_hdb_form">
        <field name="name">bsd.wizard.ky_hdb.form</field>
        <field name="model">bsd.wizard.ky_hdb</field>
        <field name="arch" type="xml">
            <form string="Ký đặt cọc">
                <sheet>
                    <group>
                        <group>
                            <field name="bsd_hd_ban_id"/>

                        </group>
                        <group>
                            <field name="bsd_ngay_ky_hdb"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_xac_nhan" type="object"
                            string="Xác nhận" class="oe_highlight"/>
                    <button special="cancel" string="Hủy bỏ"/>
                </footer>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="bsd_wizard_ky_hdb_action">
        <field name="name">Ký hợp đồng bán</field>
        <field name="res_model">bsd.wizard.ky_hdb</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>
</odoo>