                                            ('bsd_thanh_toan','!=','chua_tt'),('state','in', ['xac_nhan'])]"
                                   options="{'no_create':true}"
                                   attrs="{'invisible':[('bsd_loai_gc', '!=','gc_tc')],
                                           'required':[('bsd_loai_gc', '=', 'gc_tc')]}"
                            />
