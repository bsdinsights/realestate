<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_tinh_thanh_form">
        <field name="name">bsd.tinh_thanh.form</field>
        <field name="model">bsd.tinh_thanh</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="bsd_quoc_gia_id"/>
                            <field name="bsd_ma"/>
                            <field name="bsd_ten"/>
                        </group>
                        <group>
                            <field name="bsd_dien_giai"/>
                            <field name="bsd_trang_thai"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_tinh_thanh_tree">
        <field name="name">bsd.tinh_thanh.tree</field>
        <field name="model">bsd.tinh_thanh</field>
        <field name="arch" type="xml">
            <tree>
                <field name="bsd_quoc_gia_id"/>
                <field name="bsd_ma"/>
                <field name="bsd_ten"/>
                <field name="bsd_dien_giai"/>
                <field name="bsd_trang_thai"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="bsd_tinh_thanh_action">
        <field name="name">Tỉnh thành</field>
        <field name="res_model">bsd.tinh_thanh</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="xml">
            <p>Tạo thông tin tỉnh thành</p>
        </field>
    </record>
</odoo>