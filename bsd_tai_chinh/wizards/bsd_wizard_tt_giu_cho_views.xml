<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--    Phiếu thu pop_up -->
    <record model="ir.ui.view" id="bsd_wizard_tt_giu_cho_form">
        <field name="name">bsd.wizard.tt_giu_cho.form</field>
        <field name="model">bsd.wizard.tt_giu_cho</field>
        <field name="arch" type="xml">
            <form create="false">
                <sheet>
                    <group>
                        <group>
                            <field name="bsd_ngay_pt"/>
                            <field name="bsd_khach_hang_id"
                                   context="{'show_info':True}"
                                   options="{'no_create':true}"/>
                            <field name="bsd_giu_cho_id"
                                   domain="[('bsd_khach_hang_id', '=', bsd_khach_hang_id),
                                            ('state', '=', 'dat_cho')]"
                                   options="{'no_create':true}"/>
                        </group>
                        <group>
                            <field name="bsd_tien_kh"/>
                            <field name="bsd_du_an_id" readonly="1" force_save="1"/>
                            <field name="bsd_unit_id" readonly="1" force_save="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_tao" string="Tạo" type="object" class="oe_highlight"/>
                    <button string="Hủy" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="bsd_wizard_tt_giu_cho_action">
        <field name="name">Thanh toán giữ chỗ</field>
        <field name="res_model">bsd.wizard.tt_giu_cho</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
